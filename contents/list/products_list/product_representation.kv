<ProductRepresentation>:
    anim_move_duration: .15
    height: 50
    size_hint_y: None
    direction: 'right'
    do_scroll_y: False
    min_move: 0.1
    scroll_distance: 30
    scroll_timeout: 250
    on_current_slide: self.delete_product_from_list()
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: representation
            size_hint_x: .65
            background_color: (.92, .91, .92, 1)
            background_normal: ''
            color: (0, 0, 0, 1)
        Label:
            id: user
            size_hint_x: .2
            text: 'product'
            color: (0,0,0,1)
        CheckBox:
            id: bought
            size_hint_x: .15
            on_active: root.update_record_bd(True)
    Widget:
        canvas.before:
            Color:
                rgba: (1, 0, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size