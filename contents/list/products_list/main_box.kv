<ProductsList>:
    background: ''
    background_color: (1, 1, 1, 1)
    Screen:
        orientation: 'vertical'
        BoxLayout:
            pos_hint: {'center_x': 0.5, 'top': 1}
            orientation: 'vertical'
            ActionBar:
                size_hint_y: .08
                ActionView:
                    canvas.before:
                        Color:
                            rgba: (.03, .67, .14, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    ActionPrevious:
                        app_icon: ''
                        color: (0, 0, 0, 1)
                        title: 'Products'
                        with_previous: False
                    ActionOverflow:
                        size_hint_x: .1
                        MenuActionButton:
                            text: 'clear all'
                            on_press: root.clear_all()
                        MenuActionButton:
                            text: 'clear purchased'
                            on_press: root.clear_purchased()
            ScrollView:
                size_hint_y:.85
                do_scroll_x: False
                scroll_distance: 30
                scroll_timeout: 80
                GridLayout:
                    id: products_list
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
            CommonButton:
                size_hint_y: .07
                on_press: root.dismiss()
                text: 'Back to Lists'
        FlyingButton:
            pos_hint: {'center_x': 0.80, 'top': 0.325}
            on_press: root.open_all_products_list()




<MenuActionButton@ActionItem+CommonButton>:
    size_hint_x: None

<ActionStub@ActionItem+Widget>: