<AllProductRepresentation>:
    orientation: 'horizontal'
    height: 50
    size_hint_y: None
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: representation
        size_hint_x: .65
        color: (0, 0, 0, 1)
    Label:
        id: units
        size_hint_x: .2
        text: 'all_product'
        color: (0,0,0,1)
    CheckBox:
        id: selected
        size_hint_x: .15
        on_active: root.update_record_bd()