<ProductDetails>:
    background: ''
    background_color: (.4, .2, .2, .4)
    size_hint: .8, .8
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (.2, .2, .2, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            Label:
                text: 'delete'
            CommonButton:
                on_release: root.delete_product()
        BoxLayout:
            Label:
                text: 'name'
            TextInput:
                id: name
        BoxLayout:
            Label:
                text: 'units'
            TextInput:
                id: units
        BoxLayout:
            Label:
                text: 'rating'
            TextInput:
                id: rating
        BoxLayout:
            Label:
                text: 'quality'
            TextInput:
                id: quality
        BoxLayout:
            Label:
                text: 'current_price'
            TextInput:
                id: current_price
        BoxLayout:
            Label:
                text: 'note'
            TextInput:
                id: note
        BoxLayout:
            Label:
                text: 'Save changes'
            CommonButton:
                on_release: root.save_changes()
